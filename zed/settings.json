    "vercel": {
      "api_url": ""
    },
    "zed.dev": {
      "available_models": []
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
