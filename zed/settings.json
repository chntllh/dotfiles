  },
  "languages": {
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        },
        {
          "code_actions": {
            // "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        }
      ],
      "tab_size": 4
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "tab_size": 2
    },
    "TSX": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "tab_size": 2
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "jupyter": {
    "kernel_selections": {
      "python": "hid",
      "typescript": "deno",
      "javascript": "deno"
    }
  },
  "minimap": {
    "display_in": "all_editors",
    "current_line_highlight": "all"
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 1000,
    "scroll_debounce_ms": 100
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "outline_panel": {
    "dock": "left"
  },
  "agent": {
    "button": false,
    "enabled": false,
    "dock": null
