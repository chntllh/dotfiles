// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": false,
  "icon_theme": "Material Icon Theme",
  "base_keymap": "VSCode",
  "ui_font_size": 14,
  "buffer_font_size": 12.0,
  "buffer_font_family": "FiraCode Nerd Font",
  // "buffer_font_weight": 300,
  "buffer_font_features": {
    "calt": true
  },
  "buffer_line_height": "standard",
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "tab_size": 2,
  "scrollbar": {
    "git_diff": true,
    "show": "always"
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": ["--function-arg-placeholders=0"]
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": "/home/aqua/anaconda3/envs/hid/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "diagnostics": {
          "enable": true,
          "experimental": {
            "refreshOnChanges": true
          }
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "updateHints": {
            "enable": true,
            "debounce": 10
          }
        },
        "rustfmt": {
          "extraArgs": []
        }
      }
    }
  },
  "minimap": {
    "display_in": "all_editors",
    "current_line_highlight": "all"
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 1000,
    "scroll_debounce_ms": 100
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "outline_panel": {
    "dock": "left"
  },
  "agent": {
    "button": false,
    "enabled": false,
    "dock": null
  },
  "language_models": {
    "anthropic": {
      "api_url": ""
    },
    "google": {
      "api_url": ""
    },
    "ollama": {
      "api_url": ""
    },
    "openai": {
      "api_url": ""
    },
    "open_router": {
      "api_url": ""
    },
    "lmstudio": {
      "api_url": ""
    },
    "deepseek": {
      "api_url": ""
    },
    "mistral": {
      "api_url": ""
    },
    "bedrock": {
      "endpoint_url": "",
      "region": ""
    },
    "vercel": {
      "api_url": ""
    },
    "zed.dev": {
      "available_models": []
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "disable_ai": true
}
