monitor = HDMI-A-1, 2560x1440@120, 0x0, 1
monitor = eDP-1, 1920x1080@120, 2560x900, 1
monitor = eDP-1, disable

#monitor = eDP-1, 1920x1080@120, 0x0, 1

# Cursor
env = XCURSOR_SIZE,16
env = XCURSOR_THEME,"Bibata-Modern-Ice"

env = HYPRCURSOR_SIZE,32
env = HYPRCURSOR_THEME,"hypr_Bibata-Modern-Ice"

env = QT_QPA_PLATFORMTHEME,qt6ct # change to qt6ct if you have that
# env = WLR_DRM_DEVICES,/dev/dri/card1
# :/dev/dri/card0
env = QT_QPA_PLATFORM="wayland;xcb"

env = AQ_DRM_DEVICE,/dev/dri/card2

# Selenium
env = SE_AVOID_STATS,true
env = SE_OFFLINE,true

exec-once = hyprpaper

exec-once = /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec-once = swaync
# exec-once = ags
exec-once = waybar
# exec-once = wl-paste --type text --watch cliphist store #Stores only text data
# exec-once = wl-paste --type image --watch cliphist store #Stores only image data

windowrule=float,title:^(nmtui)$

# Window rules for xwaylandvideobridge
windowrulev2 = opacity 0.0 override 0.0 override,class:^(xwaylandvideobridge)$
windowrulev2 = noanim,class:^(xwaylandvideobridge)$
windowrulev2 = noinitialfocus,class:^(xwaylandvideobridge)$
windowrulev2 = maxsize 1 1,class:^(xwaylandvideobridge)$
windowrulev2 = noblur,class:^(xwaylandvideobridge)$

# Window rules for xdg-desktop-portal
windowrulev2 = float,class:^(xdg-desktop-portal-gtk)$
windowrulev2 = noanim,class:^(xdg-desktop-portal-gtk)$
windowrulev2 = dimaround,class:^(xdg-desktop-portal-gtk)$
windowrulev2 = size 50% 80%,class:^(xdg-desktop-portal-gtk)$

windowrulev2 = float,class:^(polkit-gnome-authentication-agent-1)$
windowrulev2 = noanim,class:^(polkit-gnome-authentication-agent-1)$
windowrulev2 = dimaround,class:^(polkit-gnome-authentication-agent-1)$

# Custom bar
# windowrulev2 = float, title:^Hyprland Bar$
# windowrulev2 = pin, title:^Hyprland Bar$
# windowrulev2 = nofocus, title:^Hyprland Bar$
# windowrulev2 = workspace special silent, title:^Hyprland Bar$


layerrule = noanim, wofi
layerrule = dimaround, wofi

workspace = 1, persistent:true
workspace = 2, persistent:true
workspace = 3, persistent:true
workspace = 4, persistent:true
workspace = 5, persistent:true
workspace = 6, persistent:true
workspace = 7, persistent:true
workspace = 8, persistent:true
workspace = 9, persistent:true
workspace = 10, persistent:true

input {
    kb_layout = us
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =

    follow_mouse = 1

    sensitivity = 0.5 # -1.0 - 1.0, 0 means no modification.

    touchpad {
        natural_scroll = yes
        disable_while_typing = yes
    }
}

gestures {
    workspace_swipe = true
    workspace_swipe_fingers = 3
    workspace_swipe_cancel_ratio = 0.5
}

general {
    gaps_in = 5
    gaps_out = 20
    border_size = 3

    gaps_workspaces = 240

    resize_on_border = true
    extend_border_grab_area = 15

    col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    col.inactive_border = rgba(595959aa)

    layout = dwindle

    allow_tearing = false
}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    rounding = 5

    blur {
        enabled = true
        size = 3
        passes = 1
        xray = true
    }

    #drop_shadow = yes
    #shadow_range = 4
    #shadow_render_power = 3
    #col.shadow = rgba(1a1a1aee)
}

animations {
    enabled = yes

    bezier = myBezier, 0.05, 0.9, 0.1, 1.05

    animation = windows, 1, 7, myBezier
    animation = windowsOut, 1, 7, default, popin 80%
    animation = border, 1, 10, default
    animation = borderangle, 1, 8, default
    animation = fade, 1, 7, default
    animation = workspaces, 1, 6, default
}

dwindle {
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybin>
    preserve_split = yes # you probably want this

}

master {
    # new_is_master = true
}

misc {
    force_default_wallpaper = 0 # Set to 0 to disable the anime mascot wallpapers
    vfr = false
}

# Applications
$terminal = alacritty
$browser = firefox
$fileManager = nautilus
$menu = wofi --show drun

# Keybinds
$mainMod = SUPER

bind = $mainMod, Q, killactive,
bind = $mainMod, F, togglefloating,
bind = $mainMod, SPACE, exec, $menu
bind = $mainMod, P, pseudo, # dwindle
bind = $mainMod, J, togglesplit, # dwindle

# Application
bind = $mainMod, T, exec, $terminal
bind = $mainMod, B, exec, $browser
bind = $mainMod, N, exec, swaync-client -t -sw
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, C, exec, code

# bind = , Print, exec, grim | wl-copy
bind = , Print, exec, grim -g "$(slurp -d)" $HOME/Pictures/Screenshots/$(date +'%s_grim.png') | wl-copy
bind = $mainMod, Print, exec, grim $HOME/Pictures/Screenshots/$(date +'%s_grim.png') | wl-copy

bind = , XF86Launch1, exec, $terminal

# Move focus with mainMod + arrow keys
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

# Workspaces
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Screen brightness
bindle = , XF86MonBrightnessUp, exec, brightnessctl -e s +5%
bindle = , XF86MonBrightnessDown, exec, brightnessctl -e s 5%-

# Keyboard backlight
bindl = , XF86KbdBrightnessUp, exec, brightnessctl -d *::kbd_backlight set +1
bindl = , XF86KbdBrightnessDown, exec, brightnessctl -d *::kbd_backlight set 1-

# Volume
bindle =, XF86AudioRaiseVolume, exec, wpctl set-volume -l 1.4 @DEFAULT_AUDIO_SINK@ 2%+
bindle =, XF86AudioLowerVolume, exec, wpctl set-volume -l 1.4 @DEFAULT_AUDIO_SINK@ 2%-

#Media
bind = , XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bind = , XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

bind = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPrev, exec, playerctl previous

# Scroll through existing workspaces with mainMod + scroll
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Scroll through existing workspaces using mainMod + (left/right)
bind = $mainMod, right, workspace, e+1
bind = $mainMod, left, workspace, e-1

# Move/resize windows with mainMod + LMB/RMB and dragging
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Disable laptop screen when lid closed connected to a monitor
bindl = , switch:off:Lid Switch, exec, hyprctl keyword monitor "eDP-1, 1920x1080@120, 2560x900, 1"
bindl = , switch:on:Lid Switch, exec, hyprctl keyword monitor "eDP-1, disable"

# Toggle laptop screen
bind = $mainMod CTRL, M, exec, bash $HOME/.config/scripts/laptop-display-toggle.sh

# Toggle touchpad
bind = , XF86TouchpadToggle, exec, bash $HOME/.config/scripts/touchpad-toggle.sh
